#file manager
bindsym $mod+f exec termite -e ranger

#lock system
bindsym XF86Display exec lock3.sh

# kill focused window
bindsym $mod+s kill

#change volume
#bindsym XF86AudioLowerVolume exec amixer sset Master 2-
#bindsym XF86AudioRaiseVolume exec amixer sset Master 2+
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5% && pkill -RTMIN+5 i3blocks
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5% && pkill -RTMIN+5 i3blocks
#bindsym XF86AudioMute exec amixer sset Master toggle && amixer sset Headphone on && amixer sset Front on
bindsym XF86AudioMicMute exec pactl set-source-mute 1 toggle && pkill -RTMIN+5 i3blocks
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle && pkill -RTMIN+5 i3blocks

#backlight control
bindsym XF86MonBrightnessUp exec xbacklight +2
bindsym XF86MonBrightnessDown exec xbacklight -2

# start dmenu (a program launcher)
bindsym $mod+r exec rofi -show run -terminal termite -lines 4 -eh 2 -width 30 -padding 10 -opacity 95 -bw 0 -font "Pragmata Pro 16"
# -w 1000 -h 38 -x 183 -y 300
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
