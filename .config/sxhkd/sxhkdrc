#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	termite -c $HOME/.config/termite/$THEME

# program launcher
alt + space
	tdrop -a -w 1920 -y 1260 -x 960 -h 900  termite -c $HOME/.config/termite/$THEME

alt + r
	rofi -show run -terminal termite -lines 5 -eh 2 -width 10 -padding 10 -font "xos4 Terminus Regular 14" -theme $HOME/.config/rofi/themes/android_notification.rasi
	#rofi -show run -terminal termite -lines 5 -eh 2 -width 20 -padding 10 -opacity 98 -font "TSTAR PRO MEDIUM 22"

#file manager
alt + f
	termite -c $HOME/.config/termite/$THEME -e 'ranger'

#volume
XF86AudioLowerVolume
	pactl set-sink-volume alsa_output.usb-Yamaha_Corporation_Steinberg_UR22-00.analog-stereo -5%
XF86AudioRaiseVolume
	pactl set-sink-volume alsa_output.usb-Yamaha_Corporation_Steinberg_UR22-00.analog-stereo +5%
XF86AudioMute
	pactl set-sink-mute alsa_output.usb-Yamaha_Corporation_Steinberg_UR22-00.analog-stereo toggle

#mpd control
XF86AudioPrev
	mpc prev
XF86AudioNext
	mpc next
XF86AudioPlay
	mpc toggle

#calculator
XF86Calculator
	chromium www.wolframalpha.com

# make sxhkd reload its configuration files:
alt + shift + p
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
alt + Escape
	bspc quit

# close and kill
alt + {s, shift + s}
	bspc node -{c,k}

# alternate between the tiled and monocle layout
alt + shift + t
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
alt + j
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
alt + g
	bspc node -s biggest

#
# state/flags
#

# toggle the window state
alt + {shift + space,t}
    state={floating,fullscreen}; \
    bspc query -N -n "focused.$\{state\}" && state=tiled; \
    bspc node -t "$state"

# set the node flags
#alt + ctrl + {z,x,c}
	#bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
alt + {n,e,u,i}
	~/.config/bspwm/focus.sh {west,south,north,east}
	#bspc node -f {west,south,north,east}
alt + shift + {n,e,u,i}
	~/.config/bspwm/move.sh {west,south,north,east}
	#euclid_mover {west,south,north,east}
	

# focus the node for the given path jump
#alt + {p,b,comma,period}
	#bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
alt + {_,shift + }z
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
alt + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
alt + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#balance
#alt + b
#        bspc -B

#equalize
#alt + shift + b
        #bspc -E

#euclid balance
alt + l
	euclid_balancer

#flip
alt + a
	bspc node @focused:/ --rotate 90
alt + shift + a
	bspc node @focused:/ --rotate -90 


#
# preselect
#

# preselect the direction
alt + {v, shift + v}
	bspc node -p {south,west}
alt + {b, shift + b}
	bspc node -p {east,north}

# preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# send to last preselect
alt + y
	bspc node -n last.\!automatic -t tiled

# cancel the preselection for the focused node
alt + c
	bspc node -p cancel

# cancel the preselection for the focused desktop
#alt + v + shift + space
	#bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#
#Use Needsade Script instead
alt + super + {n,e,u,i}
	~/.config/bspwm/resize.sh {west,south,north,east}

